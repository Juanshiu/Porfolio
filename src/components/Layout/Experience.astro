---
interface Props {
    date: string;
    title: string;

}

const { date, title } = Astro.props;
---

<div
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 bg-cyan-500"
>
</div>

<time class="mb-1 text-md font-normal leading-none text-gray-500">{date}</time>
<h3 class=" text-2xl sm:text-3xl pb-2 font-semibold text-cyan-500">{title}</h3>
<slot/>
