---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
    github: string;
    tagsToShow: string[];
}

const { title, description, image, link, github, tagsToShow } = Astro.props;

const Tags = {
    HTML: {
        name: "HTML",
        class: "bg-orange-500/50 border border-orange-700",
        icon: "html5.svg",
    },
    CSS: {
        name: "CSS",
        class: "bg-blue-500/50 border border-sky-600",
        icon: "css.svg",
    },
    JAVASCRIPT: {
        name: "JAVASCRIPT",
        class: "bg-yellow-500/50 border border-yellow-600",
        icon: "javascript.svg",
    },
    ASTRO: {
        name: "ASTRO",
        class: "bg-purple-500/50 border border-purple-600",
        icon: "astro.svg",
    },
    TAILWIND: {
        name: "TAILWIND",
        class: "bg-cyan-500/50 border border-cyan-600",
        icon: "tailwind.svg",
    },
    REACT: {
        name: "REACT",
        class: "bg-blue-500/50 border border-sky-600",
        icon: "react.svg",
    },
    STRAPI : {
        name: "STRAPI",
        class: "bg-indigo-500/50 border border-indigo-600",
        icon: "strapi.svg",
    },
    SUPABASE : {
        name: "SUPABASE",
        class: "bg-green-500/50 border border-green-600",
        icon: "supabase.svg",
    },
};
---

<div class="w-full h-auto flex flex-col sm:flex-row p-4 rounded-xl gap-6">
    <div class="relative sm:w-1/2">
        <img src={image} alt={title} class=" absolute w-full h-60 blur-md scale-105 -z-10 transition-all">
        <img src={image} alt={title} class=" w-full h-60 rounded shadow-2xl shadow-white/10 hover:scale-105 hover:shadow-neutral-900  transition-all">
    </div>
        
    <div class=" flex flex-col gap-2 sm:w-1/2">  
        <h3 class="text-2xl font-semibold text-[#E899DC]">{title}</h3>
        <ul class="flex gap-x-2 flex-row mb-2">
            {Object.values(Tags).filter(tag => tagsToShow.includes(tag.name)).map((tag) => (
                <li>
                    <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                        <img src={tag.icon} class=" size-4" alt="">{tag.name}
                    </span>
                </li>
            ))}
        </ul>
        <p class=" text-base text-pretty">{description}</p>
        <div class=" flex gap-4">
            <a href={link} target="_blank" class=" flex bg-white/10 items-center gap-1 py-1 px-2 border-gray-600 border rounded-full hover:scale-110 transition-all"><img src="link.svg" alt="">Link</a>
            <a href={github} target="_blank" class=" flex bg-white/10 items-center gap-1 py-1 px-2 border-gray-600 border rounded-full hover:scale-110 transition-all"><img src="github2.svg" alt="">Github</a>
        </div>
    </div>
</div>

<style>
	@keyframes show {
		from {
		opacity: 0;
		scale: 50%;
		}
		to {
		opacity: 1;
		scale: 100%;
		}
	}

	div {
		view-timeline-name: --Article;
		view-timeline-axis: block;
		animation-timeline: --Article;
		animation-name: show;

		animation-range: entry 20% cover 30%;
		animation-fill-mode: both;
	}
</style>