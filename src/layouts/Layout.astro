---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;

import Header from '../components/Layout/Header.astro';
import Footer from "../components/Layout/Footer.astro";
import { SpotlightPreview } from '../components/react/Spotlight'
import { GridBackgroundDemo } from '../components/react/Gridbackground';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/starry-night.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class=" relative">
		<SpotlightPreview client:load/>
		<GridBackgroundDemo client:load/>
		<Header/>
		<main class=" flex flex-col items-center text-white">

			<slot />

		</main>
		<Footer/>
	</body>
	
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		background: #000000;
		display: flex;
		flex-direction: column;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
		scroll-behavior: auto;
		}
	}
</style>